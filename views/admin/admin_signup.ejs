    <%- include('../partials/header', { title: "Admin Signup" }) %>

    <style>
        .btn-color {
            background-color: #0e1c36;
            color: #fff;
        }

        .profile-image-pic {
            height: 150px;
            width: 150px;
        }

        .cardbody-color {
            background-color: #ebf2fa;
        }

        a {
            text-decoration: none;
        }
    </style>

    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h2 class="text-center text-dark mt-5">Admin Signup</h2>
                <div class="text-center mb-5 text-dark">Create your account</div>
                <div class="card my-5">

                    <form class="card-body cardbody-color p-lg-5" action="/admin/signup" method="POST" onsubmit="return validatePasswords()">
                        <div class="text-center">
                            <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png"
                                class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3" width="150px" alt="profile">
                        </div>
                    
                        <!-- First Name -->
                        <p>
                            <label>First Name:</label>
                            <input type="text" class="form-control" name="firstname" required placeholder="Enter first name">
                        </p>
                    
                        <!-- Last Name -->
                        <p>
                            <label>Last Name:</label>
                            <input type="text" class="form-control" name="lastname" required placeholder="Enter last name">
                        </p>
                    
                        <!-- Email -->
                        <p>
                            <label>Email:</label>
                            <input type="email" class="form-control" name="email" required placeholder="Enter your email">
                        </p>
                    
                        <!-- Phone with Country Code -->
                        <p>
                            <label>Phone:</label>
                            <div class="input-group">
                                <select class="form-select" name="country_code">
                                    <option value="+1">+1 (USA)</option>
                                    <option value="+91">+91 (India)</option>
                                    <option value="+44">+44 (UK)</option>
                                    <option value="+61">+61 (Australia)</option>
                                    <option value="+81">+81 (Japan)</option>
                                </select>
                                <input type="tel" class="form-control" name="number" required placeholder="Enter phone number">
                            </div>
                        </p>
                    
                        <!-- Password -->
                        <p>
                            <label>Password:</label>
                            <input type="password" class="form-control" id="password" name="password" required placeholder="Enter password">
                        </p>
                    
                        <!-- Confirm Password -->
                        <p>
                            <label>Confirm Password:</label>
                            <input type="password" class="form-control" id="confirm_password" name="confirm_password" required placeholder="Re-enter password">
                            <small id="passwordError" class="text-danger"></small>
                        </p>
                    
                        <!-- Error Message -->
                        <% if (error) { %>
                            <p class="text-danger text-center " style="font-size:20px;"><%= error %></p>
                        <% } %>
                    
                        <!-- Signup Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-color px-5 mb-3 w-100">Signup</button>
                        </div>
                    
                        <!-- Already have an account? -->
                        <div class="text-center">
                            <p>Already have an account? <a href="/admin/login" class="text-dark fw-bold">Login here</a></p>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>

    <script>
        function validatePasswords() {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirm_password').value;
            const errorText = document.getElementById('passwordError');

            if (password !== confirmPassword) {
                errorText.innerText = "Passwords do not match!";
                return false;
            }
            errorText.innerText = "";
            return true;
        }
    </script>

    <%- include('../partials/footer') %>
