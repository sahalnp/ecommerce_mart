        <div class="app-content content">
            <div class="content-wrapper">
              <div class="content-header row"></div>
              <div class="content-body">
                <h2>Category Management</h2>
                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                  <div class="row mt-4">
                    <div class="col-md-12">
                      <div class="card">
                        <div class="card-body d-flex justify-content-between align-items-center">
                          <h5 class="card-title mb-0">CATEGORIES LIST:</h5>
                          <a href="/admin/addCategory" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i> Add Category
                          </a>
                        </div>
        
                        <div class="card-body">
                          <form class="mb-3" action="/admin/category/search" method="post">
                            <div class="input-group">
                              <input list="search_terms" type="text" class="form-control" name="search" placeholder="Search a category" />
                              <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i>
                              </button>
                            </div>
                          </form>
        
                          <% if (catList?.length > 0) { %>
                            <div class="table-responsive">
                              <table class="table table-striped">
                                <thead>
                                  <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>Edit</th>
                                    <th>Delete</th> <!-- Add a Delete column header -->
                                  </tr>
                                </thead>
                                <tbody>
                                    
                                    <% for (let i = 0; i < catList.length; i++) { %>
                                        <% if (catList[i].isDlt==false) { %> 
                                                <tr>
                                                <td><%= i + 1 %></td>
                                                <td><%= catList[i].name %></td>
                                                <td>
                                                    <% if (catList[i].isListed) { %>
                                                    <a href="/admin/category/unList/<%= catList[i]._id %>">
                                                        <span class="badge badge-success">Listed</span>
                                                    </a>
                                                    <% } else { %>
                                                    <a href="/admin/category/list/<%= catList[i]._id %>">
                                                        <span class="badge badge-danger">Unlisted</span>
                                                    </a>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a href="/admin/editCategory/<%= catList[i]._id %>">
                                                    <i class="fas fa-edit"></i>
                                                    </a>
                                                </td>
                                                <td> <!-- Add the Delete icon with a link -->
                                                    <a href="/admin/category/delete/<%= catList[i]._id %>" onclick="return confirm('Are you sure you want to delete this category?');">
                                                    <i class="fas fa-trash-alt"></i> <!-- Font Awesome delete/trash icon -->
                                                    </a>
                                                </td>
                                                </tr>
                                                <% } %>
                                                <% } %>
                                            </tbody>
                                     
                              </table>
                            </div>
                          <% } else { %>
                            <p class="text-center mt-4">No categories found.</p>
                          <% } %>
                          
                        </div>
                      </div>
                    </div>
                  </div>
                </main>
              </div>
