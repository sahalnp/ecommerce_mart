                    <li class="nav-item active">
                        <a href="/admin/add_product"
                            ><i class="fas fa-plus"></i
                            ><span class="menu-title">Add Product</span></a
                        >
                    </li>
                    <li class="nav-item">
                        <a href="watchlist.html">
