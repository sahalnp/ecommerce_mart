                    <li class="nav-item">
                        <a href="/admin/userDetails">
                            <i class="fas fa-users"></i>
                            <span>Users</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/products">
                            <i class="fas fa-boxes"></i>
