        <!-- Main Content -->
        <div class="app-content content">
            <div class="content-wrapper">
                <div class="content-body">
                    <div class="container">
                        <h2>Add Product</h2>
                        <form
                            action="/admin/upload"
                            method="POST"
                            enctype="multipart/form-data"
                        >
                            <label for="title">Product Title</label>
                            <input
                                type="text"
                                id="title"
                                name="title"
                                required
                            />

                            <label for="productPrice">Price</label>
                            <input
                                type="number"
                                id="productPrice"
                                name="productPrice"
                                required
                            />

                            <label for="sale">Sale Price</label>
                            <input
                                type="number"
                                id="sale"
                                name="salePrice"
                                required
                            />

                            <label for="brand">Brand</label>
                            <input
                                type="text"
                                id="brand"
                                name="brand"
                                required
                            />

                            <label for="description">Description</label>
                            <textarea
                                id="description"
                                name="description"
                                rows="3"
                                required
                            ></textarea>

                            <label>Sizes</label>
                            <div id="sizes-wrapper">
                                <div class="size-price-row">
                                    <input
                                        type="text"
                                        name="sizes[0][size]"
                                        class="text-uppercase"
                                        required
                                    />
                                    <input
                                        type="number"
                                        name="sizes[0][price]"
                                        class="text-uppercase"
                                        required
                                    />
                                </div>
                            </div>
                            <button
                                type="button"
                                id="add-size-btn"
                                class="small-button"
                            >
                                + Add Size
                            </button>
                            <div style="height: 15px"></div>
                            <label for="category">Category</label>
                            <div class="category-group">
                                <% if (categories && categories.length > 0) { %>
                                <% categories.forEach((category, index) => { %>
                                <input
                                    type="checkbox"
                                    id="category<%= index %>"
                                    name="categorybox"
                                    value="<%= category.name %>"
                                />
                                <label
                                    for="category<%= index %>"
                                    style="margin-bottom: 13px"
                                >
                                    <%= category.name %>
                                </label>
                                <% }); %> <% } %>
                            </div>

                            <label for="genderCategory">For</label>
                            <div class="gender-group">
                                <div class="gender-option">
                                    <input
                                        type="checkbox"
                                        id="men"
                                        name="genderCategory"
                                        value="Men"
                                    />
                                    <label style="margin-bottom: 13px" for="men"
                                        >Men</label
                                    >
                                </div>
                                <div class="gender-option">
                                    <input
                                        type="checkbox"
                                        id="women"
                                        name="genderCategory"
                                        value="Women"
                                    />
                                    <label
                                        style="margin-bottom: 13px"
                                        for="women"
                                        style="margin-bottom: 13px"
                                        >Women</label
                                    >
                                </div>
                                <div class="gender-option">
                                    <input
                                        type="checkbox"
                                        id="unisex"
                                        name="genderCategory"
                                        value="Unisex"
                                    />
                                    <label
                                        style="margin-bottom: 13px"
                                        for="unisex"
                                        >Unisex</label
                                    >
                                </div>
                                <div class="gender-option">
                                    <input
                                        type="checkbox"
                                        id="kids"
                                        name="genderCategory"
                                        value="Kids"
                                    />
                                    <label
                                        style="margin-bottom: 13px"
                                        for="kids"
                                        >Kids</label
                                    >
                                </div>
                            </div>
                            <label for="image">Product Image</label>
                            <div id="image-wrapper">
                                <input
                                    type="file"
                                    name="photos"
                                    accept="image/*"
                                    required
                                />
                            </div>
                            <button
                                type="button"
                                id="add-image-btn"
                                class="small-button"
                            >
                                + Add Image
                            </button>
                            <button type="submit ">Add Product</button>
                        </form>
                    </div>
                </div>
            </div>
            <script>
                let sizeIndex = 1;
                let imageIndex = 1;

                document
                    .getElementById("add-size-btn")
                    .addEventListener("click", function () {
                        const wrapper =
                            document.getElementById("sizes-wrapper");

                        const div = document.createElement("div");
                        div.classList.add("size-price-row");

                        div.innerHTML = `
                        <input type="text" class="text-uppercase" name="sizes[${sizeIndex}][size]" required />
                         <input type="number" class="text-uppercase" name="sizes[${sizeIndex}][price]" required />
                    `;

                        wrapper.appendChild(div);
                        sizeIndex++;
                    });
                document
                    .getElementById("add-image-btn")
                    .addEventListener("click", function () {
                        const wrapper =
                            document.getElementById("image-wrapper");

                        const input = document.createElement("input");
                        input.type = "file";
                        input.name = "photos";
                        input.accept = "image/*";
                        input.required = true;
                        input.style.marginTop = "5px";

                        wrapper.appendChild(input);
                        imageIndex++;
                    });
            </script>

            <%- include('../../partials/footer') %>
        </div>
    </body>
</html>
