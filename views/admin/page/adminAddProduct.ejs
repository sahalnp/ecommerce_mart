        <!-- Main Content -->
        <div class="app-content content">
            <div class="content-wrapper">
                <div class="content-header row"></div>
                <div class="content-body">
                    <div class="container">
                        <h2>Add Product</h2>
                        <form
                            action="/admin/upload"
                            method="POST"
                            enctype="multipart/form-data"
                        >
                            <label for="title">Product Title</label>
                            <input
                                type="text"
                                id="title"
                                name="title"
                                required
                            />

                            <label for="productPrice">Price</label>
                            <input
                                type="number"
                                id="productPrice"
                                name="productPrice"
                                required
                            />

                            <label for="sale">Sale Price</label>
                            <input
                                type="number"
                                id="sale"
                                name="salePrice"
                                required
                            />

                            <label for="brand">Brand</label>
                            <input
                                type="text"
                                id="brand"
                                name="brand"
                                required
                            />

                            <label for="description">Description</label>
                            <textarea
                                id="description"
                                name="description"
                                rows="3"
                                required
                            ></textarea>

                            <label for="size">Size</label>
                            <input type="text" id="size" name="size" required />

                            <label for="category">Category</label>
                            
                                <% if (Array.isArray(categories)) { %>
                                    <i class="fa fa-list-alt"></i>
                                    <% categories.forEach(category => { %>
                                        <input type="text" class="category-box" name="category" value="<%= category%>">
                                    <% }); %>
                                <% } %>
                                
                            
                            

                            <label for="genderCategory">For</label>
                            
                            <% if (Array.isArray(genderCategory)||genderCategory!=='undefined') { %>
                                <i class="fa fa-list-alt"></i>
                                <% genderCategory.forEach(gendercategory=> { %>
                                    <input type="text" class="category-box" name="genderCategory" value="<%= gendercategory%>">
                                <% }); %>
                            <% } %>

                            <label for="image">Product Image</label>
                            <input
                                type="file"
                                id="image"
                                name="image"
                                accept="image/*"
                                
                                required
                            />

                            <button type="submit">Add Product</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
