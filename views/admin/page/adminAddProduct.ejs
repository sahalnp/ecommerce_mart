<%- include('../partials/header') %>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        .size-price-row {
            display: flex;
            gap: 10px;
            margin-bottom: 10px;
        }

        .size-price-row input {
            flex: 1;
        }

        .content {
            margin-left: 240px;
            padding: 20px;
            margin-top: 60px;
        }
        .small-button {
            width: auto;
            padding: 6px 12px;
            font-size: 13px;
            background: #0056b3;
            margin-bottom: 15px;
            display: inline-block;
        }
        #image-wrapper input[type="file"] {
            display: block;
            margin-bottom: 10px;
        }
        #image-wrapper {
            display: flex;
            flex-wrap: wrap;
            gap: 15px; /* spacing between file inputs */
            margin-top: 10px;
        }

        #image-wrapper input[type="file"] {
            flex: 0 0 auto;
        }
        .small-button:hover {
            background-color: #007bff;
        }

        .container {
            width: 100%;
            max-width: 600px;
            margin: 50px auto;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            font-size: 22px;
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            font-size: 15px;
            display: block;
            margin-bottom: 6px;
        }

        input,
        select,
        textarea {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .category-group {
            display: flex;
            flex-direction: column;
            gap: 8px;
            margin-bottom: 20px;
        }
        .category-item input[type="checkbox"] {
            vertical-align: middle;
            margin-top: 7px; /* Slight nudge down */
        }

        .category-item {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        input[type="checkbox"] {
            width: auto;
            vertical-align: middle;
        }
        .brand-item {
            display: flex;
            align-items: center;
            gap: 8px;
        }
        .brand-item input[type="checkbox"] {
            vertical-align: middle;
            margin-top: 7px; 
        }

        .category-group {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 15px;
        }

        .category-box {
            display: flex;
            align-items: center;
            padding: 6px 10px;
            background: #f9f9f9;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

        .category-box input {
            margin-right: 8px;
        }

        .gender-group {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin-bottom: 20px;
        }

        .gender-group label {
            font-weight: normal;
            margin-left: 5px;
        }

        .gender-option {
            display: flex;
            align-items: center;
        }

        button {
            width: 100%;
            padding: 10px;
            background: #28a745;
            border: none;
            color: white;
            font-size: 18px;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background: #007bff;
        }
        button {
            background: #0056b3;
            color: white;
            padding: 8px 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
        }

        #image-wrapper input[type="file"] {
            width: 200px;
            padding: 4px;
            margin-top: 5px;
            margin-bottom: 5px;
        }

        .size-price-row {
            margin-bottom: 10px;
        }

        @media (max-width: 768px) {
            .content {
                margin-left: 0;
            }

            .container {
                margin: 20px;
            }
        }
    </style>
</head>

<%- include('../partials/navbar') %>

<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-body">
            <div class="container">
                <h2>Add Product</h2>
                <form
                    action="/admin/upload"
                    method="POST"
                    enctype="multipart/form-data"
                >
                 <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <!-- ðŸ”¹ BASIC INFO -->
                    <h3>Basic Info</h3>
                    <label for="title">Product Title</label>
                    <input type="text" id="title" name="title" required />

                    <label for="brand">Brand</label>
                    <div class="category-group">
                        <% if (brands && brands.length > 0) { %> <%
                        brands.forEach((brand, index) => { %>
                        <div class=" brand-item" >
                            <input
                                type="checkbox"
                                id="brand<%= index %>"
                                name="brandbox"                           
                                value="<%= brand.name %>"
                            />
                            <label style="margin-bottom:10px" for="brand<%= index %>">
                                <%= brand.name %>
                            </label>
                        </div>
                        <% }); %> <% } %>
                    </div>

                    <label for="description">Description</label>
                    <textarea
                        id="description"
                        name="description"
                        rows="3"
                        required
                    ></textarea>

                    <!-- ðŸ”¹ PRICING -->
                    <h3>Pricing</h3>
                    <label for="productPrice">Price</label>
                    <input
                        type="number"
                        id="productPrice"
                        name="productPrice"
                        required
                    />

                    <label for="sale">Sale Price</label>
                    <input type="number" id="sale" name="salePrice" required />

                    <!-- ðŸ”¹ PRODUCT SPECIFICATIONS -->
                    <h3>Product Specifications</h3>

                    <label for="bandColour">Band Colour</label>
                    <input
                        type="text"
                        id="bandColour"
                        name="bandColour"
                        required
                    />

                    <label for="bandMaterial">Band Material Type</label>
                    <input
                        type="text"
                        id="bandMaterial"
                        name="bandMaterial"
                        required
                    />

                    <label for="warrantyType">Warranty</label>
                    <input
                        type="number"
                        id="warranty"
                        name="warranty"
                        required
                    />

                    <label for="movementType">Watch Movement Type</label>
                    <input
                        type="text"
                        id="movementType"
                        name="movementType"
                        required
                    />

                    <label for="itemWeight">Item Weight</label>
                    <input
                        type="text"
                        id="itemWeight"
                        name="itemWeight"
                        required
                    />

                    <label for="modelNumber">Model Number</label>
                    <input
                        type="text"
                        id="modelNumber"
                        name="modelNumber"
                        required
                    />

                    <label for="caseShape">Case Shape</label>
                    <input
                        type="text"
                        id="caseShape"
                        name="caseShape"
                        required
                    />

                    <label for="specialFeatures">Special Features</label>
                    <input
                        type="text"
                        id="specialFeatures"
                        name="specialFeatures"
                        required
                    />

                    <label for="caseDiameter">Case Diameter</label>
                    <input
                        type="text"
                        id="caseDiameter"
                        name="caseDiameter"
                        required
                    />

                    <h3>Images & Category</h3>
                    <label for="image">Product Images</label>
                    <div id="image-wrapper">
                        <input
                            type="file"
                            name="photos"
                            accept="image/*"
                            required
                        />
                    </div>
                    <div style="height: 10px"></div>

                    <button
                        type="button"
                        id="add-image-btn"
                        class="small-button"
                    >
                        + Add Image
                    </button>

                    <label for="category">Category</label>
                    <div class="category-group">
                        <% if (categories && categories.length > 0) { %> <%
                        categories.forEach((category, index) => { %>
                        <div class="category-item">
                            <input
                                type="checkbox"
                                id="category<%= index %>"
                                name="categorybox"
                                value="<%= category.name %>"
                            />
                            <label for="category<%= index %>">
                                <%= category.name %>
                            </label>
                        </div>
                        <% }); %> <% } %>
                    </div>
                    <label for="inStock">inStock</label>
                    <input
                        type="number"
                        id="inStock"
                        name="inStock"
                        required
                    />
                   
                    <button type="submit">Add Product</button>
                </form>
            </div>
        </div>
    </div>
</div>

    <script>
        let imageIndex = 1;
        document
            .getElementById("add-image-btn")
            ?.addEventListener("click", function () {
                const wrapper = document.getElementById("image-wrapper");
                const input = document.createElement("input");
                input.type = "file";
                input.name = "photos";
                input.accept = "image/*";
                input.required = true;
                input.style.marginTop = "5px";
                wrapper.appendChild(input);
                imageIndex++;
            });
    </script>

    <%- include('../partials/footer') %>

