<%- include('../partials/header') %>
<head></head>
<%- include('../partials/navbar') %>

<div class="app-content content">
  <div class="content-wrapper mr-5" style="margin-top: 60px">
    <div class="content-header row"></div>
    <div class="content-body">
      <h2 class="text-center mb-4">Add Brand</h2>

      <div class="d-flex justify-content-center align-items-center">
        <div class="card" style="width: 100%; max-width: 500px; height: auto;">
          <div class="card-body">
            <form action="/admin/brand/add" method="POST">
              <div class="form-group">
                <label for="brandName">Brand Name</label>
                <input
                  type="text"
                  id="brandName"
                  name="brandName"
                  class="form-control"
                  placeholder="Enter brand name"
                  required
                />
              </div>

              <% if (message) { %>
                <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
                  <%= message %>
                  <button 
                  href="/admin/brand/add"
                    type="button"
                    class="close"
                    data-dismiss="alert"
                    aria-label="Close"
                  >
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
              <% } %>
              <div class="d-flex justify-content-between mt-4 gap-2">
                <a href="/admin/brand" class="btn btn-secondary w-50 mr-2">Back</a>
                <button type="submit" class="btn btn-primary w-50">Add Brand</button>
              </div>
              
            </form>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<%- include('../partials/footer') %>
