<!-- User List Section -->
<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">USERS LIST</h5>
                <div class="table-responsive">
                    <% if (user.length > 0) { %>
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% user.forEach((user, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td>
                                            <form action="/admin/user/<%= user.firstname %>" method="GET" class="d-inline">
                                                <button type="submit" class="btn btn-link p-0">
                                                    <%= user.firstname %> <%= user.lastname %>
                                                </button>
                                            </form>
                                        </td>
                                        <td><%= user.email %></td>
                                        <td>
                                            <span class="badge bg-<%= user.isActive ? 'success' : 'danger' %>">
                                                <%= user.isActive ? 'Active' : 'Inactive' %>
                                            </span>
                                        </td>
                                        <td>
                                            <div class="d-flex justify-content-around">
                                                <a href="/admin/edit-user/<%= user._id %>" class="text-primary me-2">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="/admin/delete-user/<%= user._id %>" 
                                                   class="text-danger" 
                                                   onclick="return confirm('Are you sure you want to delete this user?')">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <div class="alert alert-info mb-0">No users found</div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>