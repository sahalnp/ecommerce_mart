<%- include('../partials/header') %>
<head>
  <style>
    .status-select.status-pending {
      background-color: #ffc107;
      color: #000;
    }

    .status-select.status-accepted {
      background-color: #28a745;
      color: #fff;
    }

    .status-select.status-rejected {
      background-color: #dc3545;
      color: #fff;
    }

    .blurred-row {
      filter: blur(1.5px);
      opacity: 0.6;
    }

    .text-muted {
      color: #6c757d;
    }
  </style>
</head>

<%- include('../partials/navbar') %>

<div class="app-content content" style="padding-top: 50px;">
  <div class="content-wrapper">
    <div class="content-header row"></div>
    <div class="content-body">
      <h2>Review Management</h2>
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="row mt-4">
          <div class="col-md-12">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">REVIEWS LIST:</h5>
              </div>

              <% if (reviews.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-striped text-center align-middle">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>User Email</th>
                      <th>Product</th>
                      <th>Rating</th>
                      <th>Date</th>
                      <th>Status</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% reviews.forEach((review, index) => { %>
                      <tr class="<%= review.isDeleted ? 'blurred-row' : '' %>">
                        <td><%= index + 1 %></td>
                        <td><%= review.UserId?.email || 'N/A' %></td>
                        <td><%= review.productId?.title || 'N/A' %></td>
                        <td><strong><%= review.rating %></strong> / 5</td>
                        <td><%= new Date(review.date).toLocaleDateString('en-GB') %></td>
                    <td>
  <form action="/admin/reviews/update-status/<%= review._id %>" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <select
      name="status"
      class="form-select 
        <%= review.status === 'Accepted' ? 'bg-success text-white' : 
             review.status === 'Rejected' ? 'bg-danger text-white' : 
             'bg-warning text-dark' %>"
      onchange="this.form.submit()"
      style="color: #fff; border: none; padding: 0.375rem 0.75rem; font-size: 0.90rem; border-radius: 0.375rem;">
      <option value="Pending" <%= review.status === 'Pending' ? 'selected' : '' %>>Pending</option>
      <option value="Accepted" <%= review.status === 'Accepted' ? 'selected' : '' %>>Accepted</option>
      <option value="Rejected" <%= review.status === 'Rejected' ? 'selected' : '' %>>Rejected</option>
    </select>
  </form>
</td>

                        
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
                <p class="text-center">No reviews found.</p>
              <% } %>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
