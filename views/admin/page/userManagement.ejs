<%- include('../partials/header') %>
<head>
  <style>
    .status-dropdown {
      border-radius: 4px;
      padding: 4px 8px;
      font-weight: 500;
      width: 100%;
    }

    .status-dropdown.text-success {
      color: #28a745;
    }

    .status-dropdown.text-danger {
      color: #dc3545;
    }

    .status-dropdown option {
      color: #000;
    }

    .blurred-row {
      filter: blur(2px);
      opacity: 0.6;
    }

    .deleted-label {
      color: red;
      font-weight: bold;
    }
  </style>
</head>

<%- include('../partials/navbar') %>

<div class="app-content content" style="padding-top: 50px;">
  <div class="content-wrapper">
    <div class="content-header row"></div>
    <div class="content-body">
      <h2>User Management</h2>
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="row mt-4">
          <div class="col-md-12">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">USERS LIST:</h5>
              </div>

              <% if (user.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>First Name</th>
                      <th>Last Name</th>
                      <th>Edit</th>
                      <th>Delete</th>
                      <th>Status</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% user.forEach((user, index) => { %>
                      <tr class="<%= user.isDlt ? 'blurred-row' : '' %>">
                        <td><%= index + 1 %></td>
                        <td><%= user.firstname %></td>
                        <td><%= user.Lastname %></td>
                        <td>
                          <a href="/admin/edit-user/<%= user._id %>" class="text-primary fs-5">
                            <i class="fas fa-edit"></i>
                          </a>
                        </td>
                        <td>
                          <% if (user.isDlt) { %>
                            <span class="deleted-label">Deleted</span>
                          <% } else { %>
                            <form action="/admin/delete-user/<%= user._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?')">
                               <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                              <button type="submit" class="btn btn-link text-danger fs-5 p-0 m-0" style="text-decoration: none;">
                                <i class="fas fa-trash-alt"></i>
                              </button>
                            </form>
                          <% } %>
                        </td>
                        <td>
                          <form action="/admin/user/update-status/<%= user._id %>" method="POST">
                             <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <select
                              class="form-select <%= user.status === true ? 'bg-success text-white' : 'bg-danger text-white' %>"
                              name="status"
                              onchange="this.form.submit()"
                              style="color: #fff; border: none; padding: 0.375rem 0.75rem; font-size: 0.90rem; border-radius: 0.375rem;">
                              <option value="true" <%= user.status === true ? 'selected' : '' %>>Active</option>
                              <option value="false" <%= user.status === false ? 'selected' : '' %>>Block</option>
                            </select>
                          </form>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
                <p class="text-center">No users found.</p>
              <% } %>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
</div>

<script>
  function search_brand() {
    const input = document.getElementById("searchbar").value.toLowerCase();
    const rows = document.getElementsByClassName("brand-item");

    for (let i = 0; i < rows.length; i++) {
      const name = rows[i].getElementsByClassName("name")[0].innerText.toLowerCase();
      rows[i].style.display = name.includes(input) ? "" : "none";
    }
  }
</script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/theme-assets/vendors/js/vendors.min.js"></script>
<script src="/theme-assets/js/core/app-menu-lite.js"></script>
<script src="/theme-assets/js/core/app-lite.js"></script>

<%- include('../partials/footer') %>
