<body>
    <div class="app-content content">
        <div class="content-wrapper">
            <div class="content-header row">
                <div class="content-header-left col-md-6 col-12 mb-2">
                    <h3 class="content-header-title">Edit Product</h3>
                </div>
            </div>

            <div class="content-body">
                <section id="edit-product">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="card shadow-sm rounded">
                                <div class="card-header bg-primary text-white">
                                    <h4 class="card-title mb-0">Product Details</h4>
                                </div>
                                <div class="card-body">
                                    <form
                                        method="POST"
                                        action="/admin/update-product"
                                        enctype="multipart/form-data"
                                    >
                                        <input
                                            type="hidden"
                                            name="id"
                                            value="<%= product._id %>"
                                        />

                                        <div class="form-group">
                                            <label for="title">Product Title</label>
                                            <input
                                                type="text"
                                                id="title"
                                                name="title"
                                                class="form-control"
                                                value="<%= product.title %>"
                                                required
                                            />
                                        </div>

                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="productPrice">Product Price</label>
                                                <input
                                                    type="number"
                                                    id="productPrice"
                                                    name="productPrice"
                                                    class="form-control"
                                                    value="<%= product.productPrice %>"
                                                />
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="salePrice">Sale Price</label>
                                                <input
                                                    type="number"
                                                    id="salePrice"
                                                    name="salePrice"
                                                    class="form-control"
                                                    value="<%= product.salePrice %>"
                                                />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="brand">Brand</label>
                                            <input
                                                type="text"
                                                id="brand"
                                                name="brand"
                                                class="form-control"
                                                value="<%= product.brand %>"
                                            />
                                        </div>

                                        <div class="form-group">
                                            <label for="description">Description</label>
                                            <textarea
                                                id="description"
                                                name="description"
                                                class="form-control"
                                                rows="4"
                                            ><%= product.description %></textarea>
                                        </div>

                                        <div class="form-group">
                                            <label for="image">Upload New Images</label>
                                            <input
                                                type="file"
                                                id="image"
                                                name="image[]"
                                                class="form-control-file"
                                                multiple
                                            />
                                            <div class="row mt-3">
                                                <% if (product.image && product.image.length > 0) { %>
                                                    <% product.image.forEach(function(img, index) { %>
                                                        <div class="col-md-4 text-center mb-3">
                                                            <label>Image <%= index + 1 %>:</label>
                                                            <img
                                                                src="<%= img %>"
                                                                class="img-fluid rounded shadow-sm"
                                                                style="height: 120px; object-fit: cover;"
                                                                alt="Product Image"
                                                            />
                                                        </div>
                                                    <% }); %>
                                                <% } else { %>
                                                    <p class="text-muted">No existing images.</p>
                                                <% } %>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="size">Size</label>
                                            <% if (product.size && product.size.length > 0) { %>
                                                <% product.size.forEach(function(s) { %>
                                                    <input
                                                        type="text"
                                                        name="size[]"
                                                        class="form-control mb-2"
                                                        value="<%= s %>"
                                                    />
                                                <% }); %>
                                            <% } else { %>
                                                <input
                                                    type="text"
                                                    name="size[]"
                                                    class="form-control mb-2"
                                                    placeholder="Enter size"
                                                />
                                                <input
                                                    type="text"
                                                    name="size[]"
                                                    class="form-control mb-2"
                                                    placeholder="Enter another size (optional)"
                                                />
                                            <% } %>
                                            <small class="form-text text-muted">Enter each size on a new line.</small>
                                        </div>

                                        <div class="form-group">
                                            <label>Category</label><br />
                                            <% if (product.category && product.category.length > 0) { %>
                                                <% product.category.forEach(function(cat, i) { %>
                                                    <div class="form-check form-check-inline">
                                                        <input
                                                            type="checkbox"
                                                            name="category[]"
                                                            value="<%= cat %>"
                                                            class="form-check-input"
                                                            id="cat-<%= i %>"
                                                            checked
                                                        />
                                                        <label class="form-check-label" for="cat-<%= i %>"><%= cat %></label>
                                                    </div>
                                                <% }); %>
                                            <% } else { %>
                                                <div class="form-check form-check-inline">
                                                    <input
                                                        type="checkbox"
                                                        name="category[]"
                                                        value="Electronics"
                                                        class="form-check-input"
                                                        id="cat-0"
                                                    />
                                                    <label class="form-check-label" for="cat-0">Electronics</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input
                                                        type="checkbox"
                                                        name="category[]"
                                                        value="Clothing"
                                                        class="form-check-input"
                                                        id="cat-1"
                                                    />
                                                    <label class="form-check-label" for="cat-1">Clothing</label>
                                                </div>
                                            <% } %>
                                        </div>

                                        <div class="form-group">
                                            <label>Gender Category</label><br />
                                            <% const genders = ['Men', 'Women', 'Unisex']; %>
                                            <% genders.forEach(function(gender, i) { %>
                                                <div class="form-check form-check-inline">
                                                    <input type="checkbox"
                                                        name="genderCategory[]"
                                                        value="<%= gender %>"
                                                        class="form-check-input"
                                                        id="gender-<%= i %>" <%=
                                                        product.genderCategory &&
                                                        product.genderCategory.includes(gender)
                                                        ? 'checked' : '' %> />
                                                    <label
                                                        class="form-check-label"
                                                        for="gender-<%= i %>"
                                                    ><%= gender %></label>
                                                </div>
                                            <% }); %>
                                        </div>

                                        <div class="form-group">
                                            <label for="inStock">In Stock</label>
                                            <input
                                                type="number"
                                                id="inStock"
                                                name="inStock"
                                                class="form-control"
                                                value="<%= product.inStock %>"
                                            />
                                        </div>

                                        <div class="form-group form-check">
                                            <input type="checkbox"
                                                name="isListed"
                                                class="form-check-input"
                                                id="isListed" <%=
                                                product.isListed ? 'checked' :
                                                '' %> />
                                            <label
                                                class="form-check-label"
                                                for="isListed"
                                            >Is Listed</label>
                                        </div>

                                        <button
                                            type="submit"
                                            class="btn btn-success btn-block mt-3"
                                        >
                                            Update Product
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
