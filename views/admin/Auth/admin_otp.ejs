<%- include('../partials/authHeader', { title: "Verify OTP" }) %>

<section class="bg-light py-3 py-md-5 py-xl-8">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
        <div class="mb-5">
          <h4 class="text-center mb-4">Verify OTP</h4>
          <p class="text-center">Enter the OTP sent to your email</p>
        </div>

      

        <div class="card border border-light-subtle rounded-4">
          <div class="card-body p-3 p-md-4 p-xl-5">
            <form action="/admin/otp" method="POST">
              <div class="row gy-3 overflow-hidden">
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <input type="text" class="form-control" name="otp" id="otp" placeholder="Enter your OTP" required>
                    <label for="otp" class="form-label">Enter OTP</label>
                  </div>
                </div>
                <% if (message) { %>
                    <div class="alert alert-danger text-center py-2"><%= message %></div>
                  <% } %>
                <div class="col-12">
                  <div class="d-grid">
                    <button class="btn btn-primary btn-lg" type="submit">Verify OTP</button>
                  </div>
                </div>
                <div class="col-12 text-center">
                  <p class="mt-3 mb-0">
                    Didn't receive OTP?
                    <a href="/admin/otp" class="link-primary text-decoration-none fw-semibold">Resend OTP</a>
                  </p>
                </div>
              </div>    
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

<%- include('../partials/authFooter') %>
