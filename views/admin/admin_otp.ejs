<%- include('../partials/header', { title: "Admin OTP Verification" }) %>

<style>
    .btn-color {
        background-color: #0e1c36;
        color: #fff;
    }

    .cardbody-color {
        background-color: #ebf2fa;
    }

    a {
        text-decoration: none;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center text-dark mt-5">Admin OTP Verification</h2>
            <div class="text-center mb-5 text-dark">Enter the OTP sent to your email/phone</div>
            <div class="card my-5">

                <form class="card-body cardbody-color p-lg-5" action="/admin/otp" method="POST">
                    <!-- OTP Input -->
                    <p>
                        <label>Enter OTP:</label>
                        <input type="text" class="form-control" name="otp" required placeholder="Enter your OTP">
                    </p>

                    <!-- Verify Button -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-color px-5 mb-3 w-100">Verify OTP</button>
                    </div>

                    <!-- Resend OTP -->
                    <div class="text-center">
                        <p>Didn't receive OTP? <a href="/admin/otp" class="text-dark fw-bold">Resend OTP</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
