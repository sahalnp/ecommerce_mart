<%- include('partials/header') %>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-3 sidebar">
               
                <div><ul class="nav flex-column">
                    <h4>Settings</h4>
                    <li class="nav-item"><a href="/account" class="nav-link active">Profile</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Orders</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Wishlist</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Cart</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Categories</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Deals</a></li>
                    <li class="nav-item"><a href="/logout" class="nav-link">Logout</a></li>
                    <li class="nav-item"><a href="/" class="nav-link">Back</a></li>
                    
                </ul></div>
            </nav>
            <main class="col-md-9 p-4">
                <div class="card p-4">
                    <hr>
                    <h5>Profile Settings</h5>
                    <form> 
                        <div class="profile-container">
                            <div class="profile-header">
                                <img src="profile-pic.jpg" alt="Profile Picture">
                                <div>
                                    <h2>Rafiqul Rahman</h2>
                                    <p><%= role %></p>
                                    <br>
                                    <p><%= place %></p>
                                    
                                </div>
                                <button class="edit-btn">Edit ✎</button>
                            </div>
                        
                            <div class="info-section">
                                <h3>Personal Information</h3>
                                <p><span>First Name:</span><%= user.Firstname %></p>
                                <p><span>Last Name:</span><%=user.Lastname%></p>
                                <p><span>Email:</span><%=user.email %></p>
                                <p><span>Phone:</span><%=user.number %></p>
                                <button class="edit-btn">Edit ✎</button>
                            </div>
                        
                            <div class="info-section">
                                <h3>Address</h3>
                                <p><span>Country:</span><%=Country %></p>
                                <p><span>City/State:</span><%= state%></p>
                                <p><span>Postal Code:</span> <%=post %></p>
                                <button class="edit-btn">Edit ✎</button>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Save Changes</button>
                    </form>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <%- include('partials/footer') %>