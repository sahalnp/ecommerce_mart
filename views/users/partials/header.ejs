        .chevron-icon {
            transition: transform 0.3s ease;
            font-size: 10px;
        }
        
        .chevron-rotated {
            transform: rotate(180deg);
        }
        
        .username-text {
            font-size: 14px;
            margin-right: 5px;
        }
        
        .arrow_box_right {
            position: relative;
        }
        
        .arrow_box_right:before {
            content: "";
            position: absolute;
            top: -8px;
            right: 15px;
            border-left: 8px solid transparent;
            border-right: 8px solid transparent;
            border-bottom: 8px solid #fff;
        }
        
