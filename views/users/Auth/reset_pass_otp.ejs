<%- include('../partials/authHeader') %>
    <body class="bg-dark">
        <div
            class="container d-flex justify-content-center align-items-center vh-100"
        >
            <div class="card p-4 shadow" style="max-width: 400px; width: 100%">
                <h3 class="text-center">Email Verification</h3>

                <% if (error) { %>
                <div class="alert alert-danger text-center mt-3" role="alert">
                    <%= error %>
                </div>
                <% } %>

                <form id="emailForm" action="/reset" method="POST" class="mt-3">
                    <div class="mb-3">
                        <input type="email" class="form-control" value='<%= email %>' name="email" id="emailInput" required placeholder="Enter your email">

                    </div>
                    <button type="submit" class="btn btn-primary w-100">
                        Send OTP
                    </button>
                </form>

                <!-- OTP Form (Only show after email submission) -->
                <% if (showOtpInput) { %>
                <form
                    id="otpForm"
                    action="/reset_verify_otp"
                    method="POST"
                    class="mt-3"
                >
                    <div class="mb-3">
                        <input
                            type="text"
                            class="form-control"
                            name="otp"
                            id="otpInput"
                            required
                            placeholder="Enter OTP"
                            
                        />
                    </div>
                    <button type="submit" class="btn btn-success w-100">
                        Verify OTP
                    </button>
                </form>
                <% } %>
            </div>
        </div>

        <!-- Bootstrap JS (Optional, for Bootstrap components) -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        <%- include('partials/authFooter') %>