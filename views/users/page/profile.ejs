                        Email
                    </div>
                    <div class="field-value">sahalnp60@gmail.com</div>
                </div>
                
                <div class="profile-field">
                    <div class="field-label">
                        <i class="fas fa-phone"></i>
                        Phone Number
                    </div>
                    <div class="field-value">+918921018932</div>
                </div>
            </div>

            <!-- Account Details -->
            <div class="profile-section">
                <h2 class="section-title">
                    <i class="fas fa-cog"></i>
                    Account Details
                </h2>
                
                <div class="profile-field">
                    <div class="field-label">
                        <i class="fas fa-id-card"></i>
                        User ID
                    </div>
                    <div class="field-value">681f35aa5ce97761c32b8f2a</div>
                </div>
                
                <div class="profile-field">
                    <div class="field-label">
                        <i class="fas fa-shield-alt"></i>
                        Role
                    </div>
                    <div class="field-value">Customer (0)</div>
                </div>
                
                <div class="profile-field">
                    <div class="field-label">
                        <i class="fas fa-calendar-alt"></i>
                        Member Since
                    </div>
                    <div class="field-value">
                        <div>May 10, 2025</div>
                        <div class="date-formatted">11:16 AM</div>
                    </div>
                </div>
                
                <div class="profile-field">
                    <div class="field-label">
                        <i class="fas fa-heart"></i>
                        Wishlist Items
                    </div>
                    <div class="field-value">
                        <span class="wishlist-count">3 items</span>
                    </div>
                </div>
            </div>

            <!-- Account Status -->
            <div class="profile-section">
                <h2 class="section-title">
                    <i class="fas fa-info-circle"></i>
                    Account Status
                </h2>
                
                <div class="profile-field">
                    <div class="field-label">
                        <i class="fas fa-power-off"></i>
                        Status
                    </div>
                    <div class="field-value">
                        <span class="status-badge status-active">Active</span>
                    </div>
                </div>
                
                <div class="profile-field">
                    <div class="field-label">
                        <i class="fas fa-trash-alt"></i>
                        Account Deleted
                    </div>
                    <div class="field-value">
                        <span class="status-badge status-active">No</span>
                    </div>
                </div>
                
                <div class="profile-field">
                    <div class="field-label">
                        <i class="fas fa-database"></i>
                        Version
                    </div>
                    <div class="field-value">2</div>
                </div>
            </div>

            <!-- Addresses -->
            <div class="profile-section">
                <h2 class="section-title">
                    <i class="fas fa-map-marker-alt"></i>
                    Addresses
                </h2>
                
                <div class="empty-addresses">
                    No addresses added yet
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="actions-section">
                <button class="action-btn btn-primary">
                    <i class="fas fa-edit"></i>
                    Edit Profile
                </button>
                
                <button class="action-btn btn-secondary">
                    <i class="fas fa-lock"></i>
                    Change Password
                </button>
                
                <button class="action-btn btn-secondary">
                    <i class="fas fa-plus"></i>
                    Add Address
                </button>
                
                <button class="action-btn btn-secondary">
                    <i class="fas fa-heart"></i>
                    View Wishlist
                </button>
            </div>
        </div>
    </div>

