<script>
    const csrfToken = "<%= csrfToken %>";
    
   function confirmReturn() {
    alert("confirmReturn function called"); // Debug

    const confirmAction = confirm("Are you sure you want to return this item?");
    alert("User selected: " + confirmAction); // Will show true or false

    if (confirmAction) {
        alert("Now showing return modal"); // This confirms it's entering the condition
        document.getElementById("returnModal").style.display = "flex";
    }
}

    function confirmCancel() {
        const confirmAction = confirm("Are you sure you want to cancel this order?");
        if (confirmAction) {
            document.getElementById("cancelModal").style.display = "flex";
        }
    }

    // Fixed closeModal function - works for both modals
    function closeModal(modalId) {
        if (modalId) {
            document.getElementById(modalId).style.display = "none";
        } else {
            // Default to returnModal if no ID specified (for backward compatibility)
            document.getElementById("returnModal").style.display = "none";
        }
    }

    // Fixed submitCancel function
    async function submitCancel(event, OrderId) {
        event.preventDefault(); // Prevent form submission
        
        const reason = document.getElementById("cancelReason").value.trim();
        if (!reason) {
            alert("Please enter a reason.");
            return;
        }
        
        try {
            const response = await axios.post('/order/cancel', { 
                _csrf: csrfToken,
                OrderId: OrderId,
                reason: reason
            });
            
            closeModal('cancelModal');
            alert("Order cancellation requested successfully.");
            
            // Optional: Reload page to show updated status
            setTimeout(() => {
                window.location.reload();
            }, 1000);
            
        } catch (error) {
            console.error('Cancel error:', error);
            closeModal('cancelModal');
            alert("Something went wrong: " + (error.response?.data?.message || error.message));
        }
    }

    async function submitReturn(event, OrderId) {
        event.preventDefault();
        
        const reason = document.getElementById("returnReason").value.trim();
        if (!reason) {
            alert("Please enter a reason.");
            return;
        }
        
        try {
            const response = await axios.post('/order/return', { 
                _csrf: csrfToken,
                OrderId: OrderId,
                reason: reason
            });
            
            closeModal('returnModal');
            alert("Return request submitted successfully.");
            
            // Optional: Reload page to show updated status
            setTimeout(() => {
                window.location.reload();
            }, 1000);
            
        } catch (error) {
            console.error('Return error:', error);
            closeModal('returnModal');
            alert("Something went wrong: " + (error.response?.data?.message || error.message));
        }
    }

    async function buy(productId, quantity) {
        try {
            await axios.post('/buy', {
                productId: productId,
                quantity: quantity, 
                _csrf: csrfToken,
            });
            
            setTimeout(() => {
                window.location.href = '/checkout';
            }, 1000);
            
        } catch (error) {
            console.error('Buy error:', error);
            alert("Something went wrong: " + (error.response?.data?.message || error.message));
        }
    }

    // Optional: Close modal when clicking outside of it
    window.onclick = function(event) {
        const returnModal = document.getElementById("returnModal");
        const cancelModal = document.getElementById("cancelModal");
        
        if (event.target === returnModal) {
            closeModal('returnModal');
        }
        if (event.target === cancelModal) {
            closeModal('cancelModal');
        }
    }
</script>