<%- include('../partials/header') %>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif;
            background-color: #ffffff;
            color: #0f1111;
            line-height: 1.4;
        }
        
        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .logo {
            font-size: 24px;
            font-weight: bold;
        }
        
        .nav-links {
            display: flex;
            gap: 30px;
        }
        
        .nav-links a {
            color: white;
            text-decoration: none;
            font-size: 14px;
        }
        
        .breadcrumb {
            background: #f7f8f8;
            padding: 10px 0;
            border-bottom: 1px solid #d5d9d9;
        }
        
        .breadcrumb-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            font-size: 12px;
        }
        
        .breadcrumb a {
            color: #007185;
            text-decoration: none;
        }
        
        .breadcrumb a:hover {
            text-decoration: underline;
            color: #c7511f;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .order-header {
            background: #f7f8f8;
            border: 1px solid #d5d9d9;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }
        
        .order-title {
            font-size: 24px;
            font-weight: 400;
            margin-bottom: 15px;
            color: #0f1111;
        }
        
        .order-summary {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 15px;
        }
        
        .summary-item {
            display: flex;
            flex-direction: column;
        }
        
        .summary-label {
            font-size: 12px;
            color: #565959;
            margin-bottom: 2px;
            font-weight: 700;
            text-transform: uppercase;
        }
        
        .summary-value {
            font-size: 14px;
            color: #0f1111;
        }
        
        /* Base delivery status styling */
        .delivery-status {
            border-radius: 4px;
            padding: 12px;
            margin-top: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
            background: #f7f8f8;
            border: 1px solid #d5d9d9;
        }
        
        .status-icon {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 12px;
            background: #565959;
        }
        
        .status-text {
            flex: 1;
        }
        
        .status-primary {
            font-weight: 700;
            margin-bottom: 2px;
            color: #0f1111;
        }
        
        .status-secondary {
            font-size: 12px;
            color: #0f1111;
        }
        
        /* Green styling for delivered status only */
        .delivery-status.status-delivered {
            background: #d5f4e6 !important;
            border: 1px solid #7fb800 !important;
        }
        
        .delivery-status.status-delivered .status-icon {
            background: #007600 !important;
        }
        
        .delivery-status.status-delivered .status-primary {
            color: #007600 !important;
        }
        
        /* Status-specific colors for other statuses */
        .delivery-status.status-shipped {
            background: #e3f2fd;
            border: 1px solid #2196f3;
        }
        
        .delivery-status.status-shipped .status-icon {
            background: #2196f3;
        }
        
        .delivery-status.status-shipped .status-primary {
            color: #1976d2;
        }
        
        .delivery-status.status-processing {
            background: #fff8e1;
            border: 1px solid #ffc107;
        }
        
        .delivery-status.status-processing .status-icon {
            background: #ffc107;
            color: #000;
        }
        
        .delivery-status.status-processing .status-primary {
            color: #f57c00;
        }
        
        .delivery-status.status-pending {
            background: #ffebee;
            border: 1px solid #f44336;
        }
        
        .delivery-status.status-pending .status-icon {
            background: #f44336;
        }
        
        .delivery-status.status-pending .status-primary {
            color: #d32f2f;
        }
        
        .delivery-status.status-cancelled {
            background: #ffebee;
            border: 1px solid #f44336;
        }
        
        .delivery-status.status-cancelled .status-icon {
            background: #f44336;
        }
        
        .delivery-status.status-cancelled .status-primary {
            color: #d32f2f;
        }
        
        .track-link {
            color: #007185;
            text-decoration: none;
            font-size: 12px;
            font-weight: 400;
        }
        
        .track-link:hover {
            text-decoration: underline;
            color: #c7511f;
        }
        
        .main-content {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 20px;
        }
        
        .order-items {
            background: white;
            border: 1px solid #d5d9d9;
            border-radius: 8px;
            overflow: hidden;
        }
        
        .items-header {
            background: #f7f8f8;
            padding: 15px 20px;
            border-bottom: 1px solid #d5d9d9;
            font-weight: 700;
            font-size: 16px;
        }
        
        .item-card {
            padding: 20px;
            border-bottom: 1px solid #e7e7e7;
            display: flex;
            gap: 20px;
        }
        
        .item-card:last-child {
            border-bottom: none;
        }
        
        .item-image {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 4px;
            background: #f0f2f2;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #565959;
            font-size: 12px;
            flex-shrink: 0;
            border: 1px solid #d5d9d9;
        }
        
        .item-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 4px;
        }
        
        .item-info {
            flex: 1;
            min-width: 0;
        }
        
        .item-title {
            font-size: 16px;
            color: #007185;
            text-decoration: none;
            font-weight: 400;
            line-height: 1.3;
            margin-bottom: 8px;
            display: block;
        }
        
        .item-title:hover {
            text-decoration: underline;
            color: #c7511f;
        }
        
        .item-details {
            font-size: 12px;
            color: #565959;
            margin-bottom: 12px;
            line-height: 1.4;
        }
        
        .item-actions {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 12px;
        }
        
        .btn {
             padding: 13px;
            border-radius: 22px;
            border: 1px solid #d5d9d9;
            background: white;
            font-size: 13px;
            cursor: pointer;
            text-decoration: none;
            color: #0f1111;
            display: inline-block;
            text-align: center;
            transition: all 0.15s ease;
        }
        
        .btn:hover {
            background: #f7f8f8;
            border-color: #c7c7c7;
        }
        

        
        .btn-primary {
            background: #ff9900;
            border-color: #ff9900;
            color: #0f1111;
        }
        
        .btn-primary:hover {
            background: #fa8900;
            border-color: #fa8900;
        }
        
        .item-price {
            font-size: 16px;
            font-weight: 700;
            color: #0f1111;
            margin-bottom: 8px;
        }
        
        .sidebar {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }
        
        .summary-card {
            background: white;
            border: 1px solid #d5d9d9;
            border-radius: 8px;
            overflow: hidden;
        }
        
        .card-header {
            background: #f7f8f8;
            padding: 15px 20px;
            border-bottom: 1px solid #d5d9d9;
            font-weight: 700;
            font-size: 16px;
        }
        
        .card-content {
            padding: 20px;
        }
        
        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 8px;
            font-size: 14px;
        }
        
        .summary-row:last-child {
            margin-bottom: 0;
        }
        
        .summary-total {
            font-weight: 700;
            padding-top: 8px;
            border-top: 1px solid #e7e7e7;
            margin-top: 8px;
        }
        
        .address-info {
            font-size: 14px;
            line-height: 1.5;
        }
        
        .address-title {
            font-weight: 700;
            margin-bottom: 8px;
        }
        
        .payment-method {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 10px;
        }
        
        .card-icon {
            width: 24px;
            height: 16px;
            background: #007185;
            border-radius: 2px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 10px;
            font-weight: bold;
        }
        
        .help-section {
            background: #f7f8f8;
            border: 1px solid #d5d9d9;
            border-radius: 8px;
            padding: 15px 20px;
            margin-top: 20px;
        }
        
        .help-title {
            font-weight: 700;
            margin-bottom: 10px;
        }
        
        .help-links {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }
        
        .help-links a {
            color: #007185;
            text-decoration: none;
            font-size: 14px;
        }
        
        .help-links a:hover {
            text-decoration: underline;
            color: #c7511f;
        }
        
        @media (max-width: 768px) {
            .container {
                padding: 15px;
            }
            
            .main-content {
                grid-template-columns: 1fr;
            }
            
            .order-summary {
                grid-template-columns: 1fr 1fr;
            }
            
            .item-card {
                flex-direction: column;
                gap: 15px;
            }
            
            .item-image {
                width: 100px;
                height: 100px;
                align-self: flex-start;
            }
        }
    </style>
</head>

<body>
    <div class="slider-area">
        <div class="single-slider slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center">
                            <h2 class="name">View Order</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container">
        <div class="order-header">
            <h1 class="order-title">Order Details</h1>
            <div class="order-summary">
                <div class="summary-item">
                    <div class="summary-label">Ordered on</div>
                    <div class="summary-value"><%= new Date(order.OrderDate).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></div>
                </div>
                <div class="summary-item">
                    <div class="summary-label">Order </div>
                    <div class="summary-value">#<%= order.OrderId %></div>
                </div>
                <div class="summary-item">
                    <div class="summary-label">Order Total</div>
                    <div class="summary-value">$<%= order.total %></div>
                </div>
                <div class="summary-item">
                    <div class="summary-label">Shipped to</div>
                    <div class="summary-value">
                        <%= Address?.name %><br> 
                        <%= Address?.street %>, <%= Address?.localPlace %>
                    </div>
                </div>
            </div>
            
            <%
            // Define status configuration
            const statusConfig = {
                'Delivered': {
                    class: 'status-delivered',
                    icon: '✓'
                },
                'Shipped': {
                    class: 'status-shipped',
                    icon: '🚚'
                },
                'Processing': {
                    class: 'status-processing',
                    icon: '⏳'
                },
                'Pending': {
                    class: 'status-pending',
                    icon: '📦'
                },
                'Cancelled': {
                    class: 'status-cancelled',
                    icon: '❌'
                }
            };
            
            const itemStatus = order.items && order.items.length > 0 ? order.items[0].status : null;
            const orderStatus = order.status || itemStatus || 'Pending';
            const currentStatus = statusConfig[orderStatus] || statusConfig['Pending'];
            %>
            
            <div class="delivery-status <%= currentStatus.class %>">
                <div class="status-icon">
                    <%= currentStatus.icon %>
                </div>
                <div class="status-text">
                    <div class="status-primary">
                        <% 
                        const displayStatus = order.status || (order.items && order.items.length > 0 ? order.items[0].status : 'Pending');
                        %>
                        <% if (displayStatus === "Delivered") { %>
                            Delivered <%= order.estimatedDelivery %>
                        <% } else { %>
                            <%= displayStatus %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="main-content">
            <div class="order-items">
                <div class="items-header">
                    Items in this order
                </div>
                
                <% if (order.items && order.items.length > 0) { %>
                    <% order.items.forEach(item => { %>
                    <div class="item-card">
                        <div class="item-image">
                            <% if (item.product && item.product.image && item.product.image[0] && item.product.image[0].filepath) { %>
                                <img src="<%= item.product.image[0].filepath %>" alt="<%= item.product.title || 'Product Image' %>">
                            <% } else { %>
                                No Image
                            <% } %>
                        </div>
                        <div class="item-info">
                            <% if (item.product) { %>
                                <a href="/product/<%= item.product._id %>" class="item-title">
                                    <%= item.product.title || 'Product Title Not Available' %>
                                </a>
                                <div class="item-details" style="font-size: 13px;">
                                    <strong>Band Color:</strong> <%= item.product.bandColour || 'Not specified' %><br>
                                    <strong>Shape:</strong> <%= item.product.caseShape || 'Not specified' %><br>
                                    <strong>Sold by:</strong> M4.com Services LLC<br>
                                    <strong>Condition:</strong> New
                                </div>
                                <div class="item-price">$<%= item.product.pricing.salePrice|| '0.00' %></div>
                                <div class="item-actions">       
                                   <button class="btn btn-primary" onclick="buy('<%= item.product._id %>', <%= item.quantity %>)">Buy it again</button>
                                    <a href="/writedReview/<%= item.product._id %>"><button class=" btn">Write a product review</button></a>
                                   <a href="/product/<%= item.product._id %>"><button class="btn">View your item</button></a>
                                </div>
                            <% } else { %>
                                <div class="item-title">Product information not available</div>
                                <div class="item-details">
                                    This product may have been removed or is no longer available.
                                </div>
                                <div class="item-price">$<%= item.price || '0.00' %></div>
                            <% } %>
                        </div>
                    </div>
                    <% }); %>
                <% } else { %>
                    <div class="item-card">
                        <div class="item-info">
                            <div class="item-title">No items found in this order</div>
                            <div class="item-details">
                                This order appears to be empty or the items could not be loaded.
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
            
            <div class="sidebar">
                <div class="summary-card">
                    <div class="card-header">Order Summary</div>
                    <div class="card-content">
                        <div class="summary-row">
                            <span>Item(s) Subtotal:</span>
                            <span>$<%= order.subtotal %></span>
                        </div>
                        <div class="summary-row">
                            <span>Shipping & Handling:</span>
                            <span>$<%= order.shipping || '0.00' %></span>
                        </div>
                        <div class="summary-row">
                            <span>Total before tax:</span>
                            <span>$<%= order.subtotal %></span>
                        </div>
                        <div class="summary-row">
                            <span>Estimated tax:</span>
                            <span>$<%= order.tax %></span>
                        </div>
                        <div class="summary-row summary-total">
                            <span><strong>Grand Total:</strong></span>
                            <span><strong>$<%= order.total %></strong></span>
                        </div>
                    </div>
                </div>
                
                <div class="summary-card">
                    <div class="card-header">Shipping Address</div>
                    <div class="card-content">
                        <div class="address-info">
                            <div class="address-title"><%= Address?.name || 'John Doe' %></div>
                            <%= Address.number %><br>
                            <%= Address?.street %>, <%= Address?.localPlace %><br>
                            <% if (Address?.landmark) { %>
                                <%= Address.landmark %><br>
                            <% } %>
                            <%= Address?.district %>, <%= Address?.city %><br>
                            <%= Address?.state %> - <%= Address?.pincode %><br>
                            <%= Address?.country %><br>
                            (<%= Address?.addressType %>)
                        </div>
                    </div>
                </div>
                
                <div class="summary-card">
                    <div class="card-header">Payment Method</div>
                    <div class="card-content">
                        <div class="payment-method">
                            <span><%= order.paymentMethod %></span>
                        </div>
                        <div style="font-size: 12px; color: #565959;">
                            Billing address same as shipping address
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="help-section">
            <div class="help-title">Need help with your order?</div>
            <div class="help-links">
                <a href="#">Track your package</a>
                <a href="#">Return items</a>
                <a href="#">Cancel items</a>
                <a href="#">Print invoice</a>
                <a href="#">Leave delivery feedback</a>
                <a href="#">Report a problem with this order</a>
            </div>
        </div>
    </div>

    <script>
            const csrfToken = "<%= csrfToken %>";
        async function buy(productId,quantity) {
            try {
                await axios.post('/buy',{
                    productId,quantity, _csrf: csrfToken,
                })
                
            } catch (error) {
                alert(error)
                
            }
            setTimeout(() => {
           window.location.href = '/checkout';

        }, 1000);
        }

        document.querySelectorAll('.btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                // Don't prevent default for anchor tags with href
                if (this.tagName === 'BUTTON') {
                    e.preventDefault();
                }
                
                const action = this.textContent.trim();
                
                switch(action) {
                    case 'Buy it again':
                        // Allow the link to work normally
                        break;
                    case 'Write a product review':
                         window.location.href = this.closest('a')?.href;
                        break;
                        break;
                    case 'View your item':
                         window.location.href = this.closest('a')?.href;
                         break;
                    case 'Get product support':
                        e.preventDefault();
                        alert('Opening support page...');
                        break;
                    case 'Return or replace items':
                        e.preventDefault();
                        alert('Opening return process...');
                        break;
                }
            });
        });
        
        // Track package link functionality
        document.querySelectorAll('.track-link').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                alert('Opening package tracking details...');
            });
        });
        
        // Help links functionality
        document.querySelectorAll('.help-links a').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const action = this.textContent.trim();
                alert(`Opening: ${action}`);
            });
        });
    </script>
<%- include('../partials/footer') %>