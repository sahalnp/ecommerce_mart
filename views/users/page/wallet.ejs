<%- include('../partials/header') %>

<head>
    <link rel="stylesheet" href="/assets/css/profile.css" />
</head>

<div class="slider-area box">
    <div class="single-slider slider-height2 d-flex align-items-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-12 d-flex flex-column align-items-center">
                    <div class="hero-cap text-center">
                        <h2 class="name">Profile</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="sidebar">
                <nav class="nav flex-column">
                    <a class="nav-link" href="/profile/<%= user._id %>">
                        <i class="fas fa-user me-2"></i> Profile Settings
                    </a>
                    <a
                        class="nav-link"
                        href="/profile/changePassword/<%= user._id %>"
                    >
                        <i class="fas fa-lock me-2"></i> Change Password
                    </a>
                    <a class="nav-link" href="/profile/address/<%= user._id %>">
                        <i class="fas fa-map-marker-alt me-2"></i> Addresses
                    </a>
                    <a
                        class="nav-link active"
                        href="/profile/wallet/<%= user._id %>"
                    >
                        <i class="fas fa-wallet me-2"></i> Wallet
                    </a>
                </nav>
            </div>
        </div>

        <!-- Wallet Content -->
        <div class="col-md-9">
            <div class="profile-container p-4 bg-light rounded shadow-sm">
                <h3 class="mb-4">My Wallet</h3>

                <!-- Wallet Balance Card -->
                <div class="wallet-card p-4 bg-primary text-white rounded mb-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h4>
                                <i class="fas fa-wallet me-2"></i> Wallet
                                Balance
                            </h4>
                            <h2 class="mb-0">
                                $<%= wallet.balance.toFixed(2) %>
                            </h2>

                            <small class="opacity-75">Available Balance</small>
                        </div>
                    </div>
                </div>

                <!-- Recent Transactions -->
                <h5 class="mb-3">Recent Transactions</h5>
                <div class="table-responsive">
                    <table class="table table-hover table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>OrderID</th>
                                <th>Description</th>
                                <th>Type</th>
                                <th>Amount</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% wallet.transactions.forEach(wt => { %>
                            <tr>
                                <td><%= wt.date.toLocaleDateString() %></td>
                                <td><%= wt.orderId || '-' %></td>
                                <td><%= wt.description %></td>
                                <td>
                                    <span
                                        class="badge <%= wt.type === 'Credit' ? 'bg-success' : 'bg-danger' %>"
                                    >
                                        <%= wt.type %>
                                    </span>
                                </td>
                                <td>â‚¹<%= wt.amount %></td>
                                <td>
                                    <span
                                        class="badge <%= wt.status === 'Pending' ? 'bg-warning text-dark' : wt.status === 'Shipped' ? 'bg-primary' : wt.status === 'Delivered' ? 'bg-success' : wt.status === 'Cancelled' ? 'bg-danger' : wt.status === 'Return' ? 'bg-info text-dark' : 'bg-secondary' %>"
                                    >
                                        <%= wt.status %>
                                    </span>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
