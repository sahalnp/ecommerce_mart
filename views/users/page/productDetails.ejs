            toast.style.animation = 'slideIn 0.3s ease-out, fadeOut 0.5s 2.0s ease-in forwards';
          }, 10);

          setTimeout(() => {
            toast.style.display = 'none';
          }, 3000);

        } catch (error) {
          console.log(error, 'ERROR');
        }
      }
