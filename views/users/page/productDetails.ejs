<%- include('../partials/header') %>
<style>
    .product-detail-page {
        background: #fff;
        padding: 2rem 0;
    }

    .product-gallery {
        position: relative;
        padding-right: 1rem;
    }

    .main-swiper {
        height: 500px;
        border: 1px solid #ddd;
        margin-bottom: 1rem;
        background: #fafafa;
    }

    .thumb-swiper {
        height: 100px;
    }

    .thumb-slide {
        cursor: pointer;
        opacity: 0.5;
        transition: all 0.3s ease;
        border: 2px solid transparent;
        background: #fafafa;
    }

    .thumb-slide.swiper-slide-thumb-active {
        opacity: 1;
        border-color: #ffa41c;
    }

    .product-info {
        padding-left: 2rem;
    }

    .price-section {
        margin: 1.5rem 0;
        padding: 1rem;
        background: #fafafa;
        border-radius: 4px;
    }

    .current-price {
        font-size: 28px;
        color: #b12704;
        margin-right: 1rem;
    }

    .original-price {
        font-size: 18px;
        color: #565959;
    }

    .savings-badge {
        background: #cc0c39;
        color: white;
        padding: 3px 7px;
        border-radius: 3px;
        font-size: 14px;
    }

    .stock-status {
        color: #007600;
        font-size: 18px;
        margin: 1rem 0;
    }

    .quantity-control {
        display: flex;
        align-items: center;
        margin: 1.5rem 0;
    }

    .quantity-input {
        width: 60px;
        text-align: center;
        border: 1px solid #d5d9d9;
        border-radius: 4px;
        padding: 5px;
        margin: 0 10px;
    }
     .stock-status {
        font-weight: bold; /* Make the text bold */
        color: #007600; /* In Stock color */
        font-size: 18px;
    }

    .text-danger {
        font-weight: bold; /* Make the text bold */
        color: #cc0c39; /* Out of Stock color */
        font-size: 18px;
    }
    .btn-qty {
        background: #f0f2f2;
        border: 1px solid #d5d9d9;
        padding: 5px 15px;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-qty:hover {
        background: #e3e6e6;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-add-to-cart {
        background: #ffd814;
        border-color: #fcd200;
        color: #0f1111;
        padding: 10px 50px;
        border-radius: 20px;
    }

    .btn-buy-now {
        background: #ffa41c;
        border-color: #ff8f00;
        color: #0f1111;
        padding: 10px 50px;
        border-radius: 20px;
    }

    .product-specs {
        margin: 2rem 0;
        padding: 1rem;
        background: #fafafa;
        border-radius: 4px;
    }

    .specs-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
    }

    .spec-item {
        font-size: 14px;
        line-height: 1.5;
    }

    .spec-label {
        color: #565959;
        font-weight: 500;
    }
    .custom-list {
        font-family: 'Arial', sans-serif;
        color: #333;
        font-size: 16px;
        line-height: 1.6;
        font-weight: bold; 
    }

    @media (max-width: 768px) {
        .main-swiper {
            height: 300px;
        }

        .product-info {
            padding-left: 0;
            margin-top: 2rem;
        }

        .action-buttons {
            flex-direction: column;
        }

        .specs-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<main class="product-detail-page">
    <div class="container my-5">
        <div class="row gx-4 align-items-start">
            <!-- Image Slider -->
            <div class="col-md-6">
                <div class="swiper mainSwiper">
                    <div class="swiper-wrapper">
                        <% for(let i = 0; i < product.image.length; i++) { %>
                        <div class="swiper-slide">
                            <img
                                src="<%= product.image[i].filepath %>"
                                class="img-fluid"
                                style="max-height: 450px; object-fit: contain"
                            />
                        </div>
                        <% } %>
                    </div>
                </div>

                <!-- Thumbnail Swiper -->
                <div class="swiper thumbSwiper mt-3">
                    <div class="swiper-wrapper">
                        <% for(let i = 0; i < product.image.length; i++) { %>
                        <div class="swiper-slide">
                            <img
                                src="<%= product.image[i].filepath %>"
                                class="img-thumbnail"
                                style="max-height: 100px; object-fit: contain"
                            />
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Product Info -->
            <div class="col-lg-6 product-info">
                <h1 class="product-title mb-3"><%= product.title %></h1>

                <div class="rating mb-3">
                    <span class="text-warning">★★★★☆</span>
                    <span class="text-muted">(1,234 ratings)</span>
                </div>

                <div class="price-section">
                    <span class="current-price"
                        >₹<%= product.pricing.salePrice %></span
                    >
                    <span class="original-price"
                        ><del>₹<%= product.pricing.price %></del></span
                    >
                    <span class="savings-badge">Save <%= discount %>%</span>
                </div>

                <% if (product.inStock > 0) { %>
                    <div class="stock-status">In Stock</div>
                <% } else { %>
                    <div class="text-danger">Out of stock</div>
                <% } %>

                <div class="product-highlights">
                    <ul class="list-unstyled custom-list">
                        <li>✓ Free delivery by Friday, May 9</li>
                        <li>✓ <%= product.warranty %> warranty</li>
                        <li>✓ 7-day returns policy</li>
                    </ul>
                </div>

                <div class="quantity-control">
                    <label for="quantity" class="mb-0 mr-2 font-weight-medium"
                        >Quantity:</label
                    >

                    <button
                        class="btn-qty btn-decrease"
                        style="color: #0f1111"
                        type="button"
                    >
                        −
                    </button>
                    <input
                        type="number"
                        id="quantity"
                        class="quantity-input"
                        value="1"
                        min="1"
                        max="10"
                    />
                    <button
                        class="btn-qty btn-increase"
                        style="color: #0f1111"
                        type="button"
                    >
                        +
                    </button>
                </div>

                <div class="action-buttons">
                    <button class="btn btn-add-to-cart">
                        <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                    </button>
                    <button class="btn btn-buy-now">Buy Now</button>
                </div>

                <div class="product-specs">
                    <h5 class="mb-3">Product Specifications</h5>
                    <div class="specs-grid">
                        <div class="spec-item">
                            <span class="spec-label">Brand:</span>&nbsp <%=
                            product.brand.name %>
                        </div>
                        <div class="spec-item">
                            <span class="spec-label">Band Material:</span>&nbsp <%=
                            product.bandMaterial %>
                        </div>
                        <div class="spec-item">
                            <span class="spec-label">Case Diameter:</span> &nbsp<%=
                            product.caseDiameter %>
                        </div>
                        <div class="spec-item">
                            <span class="spec-label">Band Color:</span>&nbsp <%=
                            product.bandColour %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Description -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">About this item</h4>
                        <div class="card-text">
                            <%= product.description %>
                            <ul class="mt-3">
                                <li>
                                    Premium <%= product.bandMaterial %> band
                                    material
                                </li>
                                <li>
                                    <%= product.waterResistance %> water
                                    resistance
                                </li>
                                <li>
                                    <%= product.warranty %> manufacturer
                                    warranty
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

