<%- include('../partials/header') %>
<head>
 <link rel="stylesheet" href="/assets/css/wishlist.css">
</head>

<main>
  <!-- Hero Section -->
  <div class="slider-area box">
    <div class="single-slider slider-height2 d-flex align-items-center">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-xl-12 d-flex flex-column align-items-center">
            <div class="hero-cap text-center">
              <h2 class="name">Wishlist</h2>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Wishlist Content -->
  <div class="wishlist-container">
    <h2 style="text-align: center; margin-bottom: 1.5rem;">Your Wishlist</h2>
    <% if (wishlist && wishlist.length > 0) { %>
      <% wishlist.forEach(item => { %>
        <div class="wishlist-item" id="item-<%= item._id %>">
          <img src="<%= item.image[0].filepath %>" alt="Watch Image" />
          <div class="item-details">
            <h4><%= item.title %></h4>
            <p>Price: ‚Çπ<%= item.pricing.price %></p>
          </div>
          <div class="wishlist-actions">
       <% if (cart.some(c => c.productId.toString() === item._id.toString())) { %>

             <a href="/cart"><button type="button">Go to cart</button></a>
            <% } else { %>
              <% if (item.inStock <=0) { %>
               <button type="button" onclick="showOutOfStockToast()">Add To Cart</button>
               <% } else { %>
                <button type="button" onclick="addToCart('<%= item._id %>')">Add To Cart</button>
              <% } %>
                
              <% } %>
            <button class="remove-btn" onclick="removeFromWishlist('<%= item._id %>')">Remove</button>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="wishlist-empty">
        No product added to wishlist.
      </div>
    <% } %>
  </div>

  <!-- Toast Messages -->
  <div class="cart-toast">Item added to cart! üéâ</div>
  <div class="wishlist-toast">Item removed from wishlist! ‚ùå</div>
  <div class="stock-toast">Item is out of stock! üì¶</div>
</main>z

<!-- Script -->
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
  const csrfToken = "<%= csrfToken %>";
      async function addToCart(productId) {
        try {
          console.log(productId,"id");
          
        const res = await axios.post(
        `/product/add-to-cart`, 
        { productId, quantity: 1, _csrf: csrfToken, },
        { withCredentials: true }
      );


      console.log("Added to cart", res.data);


    // Show toast
    const toast = document.querySelector('.cart-toast');
    if (toast) {
      toast.style.display = 'block';
      setTimeout(() => {
        toast.style.display = 'none'
        window.location.reload();;
      }, 3000);
    }
    

  } catch (error) {
    console.error("Add to cart failed:", error);
    alert("Failed to add item to cart.");
  }
}
function showOutOfStockToast() {
  const toast = document.querySelector('.stock-toast');
  if (toast) {
    toast.style.display = 'block';
    setTimeout(() => {
      toast.style.display = 'none';
    }, 3000);
  }
}
  async function removeFromWishlist(productId) {
    try {
      const res = await axios.post(`/wishlist/remove/${productId}`, { _csrf: csrfToken,}, { withCredentials: true });
      console.log("Removed from wishlist", res.data);

      const item = document.getElementById(`item-${productId}`);
      if (item) item.remove();

      const toast = document.querySelector('.wishlist-toast');
      if (toast) {
        toast.style.display = 'block';
        setTimeout(() => {
          toast.style.display = 'none';
          window.location.reload();
        }, 3000);
      }
    } catch (err) {
      alert("Removing from wishlist failed");
      console.error("Remove wishlist error: ", err);
    }
  }
</script>

<%- include('../partials/footer') %>
