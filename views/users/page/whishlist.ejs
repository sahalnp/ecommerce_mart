<%- include('../partials/header') %>
<head>
  <style>
    body {
      font-family: "Segoe UI", sans-serif;
      background: #f9f9f9;
    }

    .wishlist-container {
      max-width: 900px;
      margin: 3rem auto 2rem auto;
      background: #fff;
      border-radius: 12px;
      padding: 50px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .wishlist-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1.5rem 0;
      border-bottom: 1px solid #eee;
      transition: background 0.2s ease;
    }

    .wishlist-item:hover {
      background: #fafafa;
    }

    .wishlist-item img {
      width: 90px;
      height: auto;
      border-radius: 8px;
      object-fit: cover;
    }

    .item-details {
      flex: 1;
      margin-left: 1.5rem;
    }

    .item-details h4 {
      margin: 0;
      font-size: 1.2rem;
      color: #222;
    }

    .item-details p {
      margin: 0.4rem 0;
      color: #666;
      font-size: 0.95rem;
    }

    .wishlist-actions {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .wishlist-actions button {
      padding: 0.4rem 1rem;
      border: none;
      border-radius: 6px;
      background: #2d2d2d;
      color: white;
      cursor: pointer;
      font-size: 0.9rem;
      transition: background 0.2s ease;
    }

    .wishlist-actions button:hover {
      background: #444;
    }

    .wishlist-actions .remove-btn {
      background: #e53935;
    }

    .wishlist-actions .remove-btn:hover {
      background: #c62828;
    }

    .hero-cap .name {
    font-size: clamp(2rem, 5vw, 3.5rem);
}
.slider-area {
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.single-slider {
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.hero-cap h2 {
    font-size: 3rem;
    font-weight: bold;
    color: #0d1b2a; /* dark navy-like color */
}

    .wishlist-empty {
      text-align: center;
      padding: 3rem 1rem;
      color: gray;
      font-size: 1rem;
    }

    /* Toast Styles */
    .cart-toast,
    .wishlist-toast {
      display: none;
      position: fixed;
      bottom: 30px;
      right: 30px;
      background: #323232;
      color: #fff;
      padding: 10px 20px;
      border-radius: 6px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      z-index: 9999;
    }

    .wishlist-toast {
      bottom: 70px;
      background: #c62828;
    }
  </style>
</head>

<main>
  <!-- Hero Section -->
  <div class="slider-area box">
    <div class="single-slider slider-height2 d-flex align-items-center">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-xl-12 d-flex flex-column align-items-center">
            <div class="hero-cap text-center">
              <h2 class="name">Wishlist</h2>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Wishlist Content -->
  <div class="wishlist-container">
    <h2 style="text-align: center; margin-bottom: 1.5rem;">Your Wishlist</h2>
    <% if (wishlist && wishlist.length > 0) { %>
      <% wishlist.forEach(item => { %>
        <div class="wishlist-item" id="item-<%= item._id %>">
          <img src="<%= item.image[0].filepath %>" alt="Watch Image" />
          <div class="item-details">
            <h4><%= item.title %></h4>
            <p>Price: ‚Çπ<%= item.pricing.price %></p>
          </div>
          <div class="wishlist-actions">
            <% if (exist==true) { %>
             <a href="/cart"><button type="button">Go to cart</button></a>
            <% } else { %>
                <button type="button" onclick="addToCart('<%= item._id %>')">Add To Cart</button>
              <% } %>
            <button class="remove-btn" onclick="removeFromWishlist('<%= item._id %>')">Remove</button>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="wishlist-empty">
        No product added to wishlist.
      </div>
    <% } %>
  </div>

  <!-- Toast Messages -->
  <div class="cart-toast">Item added to cart! üéâ</div>
  <div class="wishlist-toast">Item removed from wishlist! ‚ùå</div>
</main>

<!-- Script -->
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
      async function addToCart(productId) {
        try {
          console.log(productId,"id");
          
        const res = await axios.post(
        `/product/add-to-cart`,  // Change this route as needed
        { productId, quantity: 1 },
        { withCredentials: true }
      );

      console.log("Added to cart", res.data);


    // Show toast
    const toast = document.querySelector('.cart-toast');
    if (toast) {
      toast.style.display = 'block';
      setTimeout(() => {
        toast.style.display = 'none';
      }, 3000);
    }
    
    // Optional: update UI or reload page here if needed
    // window.location.reload();

  } catch (error) {
    console.error("Add to cart failed:", error);
    alert("Failed to add item to cart.");
  }
}


